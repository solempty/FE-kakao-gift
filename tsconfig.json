{
  "compilerOptions": {
    // TypeScipt 컴파일러의 옵션을 설정하는 항목
    
    "target": "es2016", // JavaScript의 ECMAScript 버전 지정
    "module": "commonjs", // 모듈 코드 생성 방식 선택 (AMD, ES6 등)
    //"outDir": 컴파일된 JavaScript 파일의 출력 디렉토리 설정
    "jsx": "react",
    "esModuleInterop": true, // ES 모듈과 CommonJS 모듈 간 상호 운용성 향상
    "forceConsistentCasingInFileNames": true, // 파일 이름의 대소문자 강제로 일관되게
    "strict": true, // 엄격한 타입 체크 옵션 활성화
    "skipLibCheck": true, // 'node_modules' 내의 라이브러리 파일에서 타입 검사를 생략할지 여부 설정
    "baseUrl": "./", // 기본 경로 설정
    "paths": { //절대 경로를 지정하고 싶은 경로들을 지정
      //"@/*": ["*"]
      "reset-css": ["types/reset-css"]
    }
  }
  //"include": 컴파일할 파일을 찾을 패턴을 지정
  //"exclude": 제외할 파일 지정
  //"extends": 다른 'tsconfig.json' 파일에서 설정을 확장할 때 사용
  //"compileOnSave": 저장할 때마다 자동으로 컴파일 실행 여부 설정
  //"references": 프로젝트 간에 종속성 관리
}
